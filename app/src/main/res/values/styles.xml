<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ButtonMain">
        <item name="android:background">@drawable/button_main</item>
    </style>
    <style name="EditTextProfile" parent="Theme.AppCompat.Light">
        <item name="android:textSize">16sp</item>
        <item name="colorControlNormal">@color/colorSecondaryText</item>
        <item name="colorControlActivated">@color/colorPrimaryText</item>
        <item name="android:textColorPrimaryDisableOnly">@color/colorPrimaryText</item>
    </style>
</resources>
